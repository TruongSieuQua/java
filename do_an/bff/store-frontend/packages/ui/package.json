{
  "name": "@repo/ui",
  "version": "0.0.0",
  "description": "UI components for React",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist/**",
    "src/styles.css"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "1build": "npm run tsup && npm run postcss",
    "1dev": "concurrently \"npm run tsup:watch\" \"npm run postcss:watch\"",
    "tsup": "tsup",
    "tsup:watch": "tsup --watch",
    "postcss": "npx postcss src/style.css -o dist/style.css --use tailwindcss --use autoprefixer",
    "postcss:watch": "npx postcss src/style.css -o dist/style.css --use tailwindcss --use autoprefixer --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/config": "*",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/lodash": "^4.17.6",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cssnano": "^7.0.4",
    "daisyui": "^4.12.10",
    "eslint": "^8.57.0",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animated": "^1.1.2",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.19",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-select": "^5.8.0",
    "tailwind-variants": "^0.2.1"
  }
}
