{
  "name": "@repo/ui",
  "version": "0.0.0",
  "description": "UI components for React",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist",
    "./styles.css": "./src/styles.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist/**",
    "src/styles.css"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@repo/tailwind-config": "*",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/lodash": "^4.17.6",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.10",
    "eslint": "^8.57.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.19",
    "clsx": "^2.1.1",
    "esbuild-css-modules-plugin": "^3.1.2",
    "framer-motion": "^11.2.12",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-select": "^5.8.0",
    "tailwind-variants": "^0.2.1"
  }
}
