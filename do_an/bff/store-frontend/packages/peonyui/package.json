{
  "name": "@repo/peonyui",
  "version": "0.0.0",
  "description": "UI components for React",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist/**",
    "src/styles/styles.css"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf .turbo && rm -rf cypress/screenshots && rm -rf cypress/videos && rm -rf node_modules && rm -rf dist",
    "lint": "eslint",
    "lint:fix": "eslint --fix .",
    "test": "cypress run --component --browser=chrome",
    "test:gui": "cypress open --component --browser chrome",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/migrate-config": "^1.1.2",
    "@floating-ui/react": "^0.26.19",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@testing-library/cypress": "^10.0.2",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "cypress": "^13.13.0",
    "daisyui": "^4.12.10",
    "eslint": "^9.7.0",
    "postcss": "^8.4.39",
    "postcss-import": "^16.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-select": "^5.8.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  }
}
